# Description: Build Erlang bootstrap
# Author: Christophe Romain <cromain@process-one.net>
# Depends: m4 perl gcc tar gmake|make
# Usage: bootstrap/build R13B04
# vim: set foldmarker=#(,#) foldmethod=marker ts=4 sw=4 sts=4 et syntax=zsh:

_api_check "bootstrap/build otp_version [arch]" $* || return $bad_use
local vsn=$1 otpdir=otp_src_$1 arch=${2:-$CEAN_HOSTARCH}
local lib sources=~/.cache/cean/sources/$otpdir.tar.gz

[ -e $sources ] || return $missing_sources
[ -d src ] || mkdir src
cd src
tar zxf $sources
cd $otpdir || return $fetch_error
mkdir dist

# configure, TODO: handle cross-building
local -a opts
opts=("--prefix=$PWD/dist")
# osx openssl is quite old, allow to build bootstrap with better one
brew list openssl >/dev/null 2>/dev/null && opts+="--with-ssl=$(brew info openssl | sed -e '/^\//!d;s/ .*//')"
case $arch in
darwin-x86_64) opts+="--enable-darwin-64bit" ;;
linux-x86_64) opts+="--enable-m64-build" ;;
linux-x86) opts+="--enable-m32-build" ;;
*) : ;;
esac
./configure $opts || return $config_error

# compile
which gmake >/dev/null 2>/dev/null && {
    gmake || return $make_error
} || {
    make || return $make_error
}
cp bin/start_sasl.boot bootstrap/bin
cd bootstrap
for lib in ~/.cean/lib/*
do
    lib=$lib:t
    mkdir -p lib/$lib/ebin
    bin/erlc +compressed -o lib/$lib/ebin ~/.cean/lib/$lib/src/*erl
done
cd ../../..
